<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffaabb"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.custom.view.MainActivity">


    <com.custom.view.RoundImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/pic_default" />

    <com.custom.view.RoundImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/pic_default"
        app:round_radius="15dp"
        app:round_stoker_color="@color/colorPrimary"
        app:round_stoker_width="1dp" />

    <com.custom.view.RoundImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/pic_default"
        app:round_radius="30dp" />

    <com.custom.view.RoundTextView
        android:id="@+id/round_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="5555"
        android:textColor="@color/colorAccent"
        app:round_background="@color/colorPrimary"
        app:round_radius="10dp" />

    <com.custom.view.RoundTextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="5555"
        android:textColor="@color/colorAccent"
        app:round_background="@color/colorPrimary"
        app:round_radius="15dp"
        app:round_stoker_color="#ffffff"
        app:round_stoker_width="2dp" />

</LinearLayout>
